<div class ="container">
<div class="row">
  <div class="col-lg-4">
    <h2>Burgers that need to be devoured!</h2>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
  </div>

  <div class="col-lg-4">
    <img src="/assets/img/burger.png"> 
    <h1>Eat-da-Burger</h1>
  </div> 

  <div class="col-lg-4">
    <h2>Burgers that have been devoured!</h2>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </div>
</div>  

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>
